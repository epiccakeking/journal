<interface>
    <template class="AltGui" parent="GtkApplicationWindow">
        <property name="default-width">800</property>
        <property name="default-height">600</property>
        <property name="title">BreadNotebook</property>
        <child type="titlebar">
            <object class="GtkHeaderBar">
                <child type="start">
                    <object class="GtkButton" id='backward'>
                        <property name="icon-name">go-previous</property>
                    </object>
                </child>
                <child type="start">
                    <object class="GtkButton" id='forward'>
                        <property name="icon-name">go-next</property>
                    </object>
                </child>
                <child type="end">
                    <object class="GtkMenuButton">
                        <property name="icon-name">open-menu-symbolic</property>
                        <property name="menu-model">main_menu</property>
                    </object>
                </child>
            </object>
        </child>
        <child>
            <object class="GtkPaned" id="pane">
                <property name="resize-start-child">False</property>
                <child type="start">
                    <object class="GtkBox" id="box">
                        <property name="orientation">GTK_ORIENTATION_VERTICAL</property>
                        <child>
                            <object class="GtkCalendar" id="calendar"/>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>
  <menu id="main_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">Settings</attribute>
        <attribute name="action">win.settings</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">About</attribute>
        <attribute name="action">win.about</attribute>
      </item>
    </section>
  </menu>
</interface>
